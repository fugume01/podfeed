<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:googleplay="http://www.google.com/schemas/play-podcasts/1.0" version="2.0">
  <channel>
    <title>{{ title }}</title>
    <description>{{ description }}</description>
    <googleplay:description>{{ description }}</googleplay:description>
    <itunes:image href="{{ image_url }}" />
    <googleplay:image href="{{ image_url }}" />
    <language>en-us</language>
    <lastBuildDate>{{ buildDate }}</lastBuildDate>
    <generator>nrfeed: https://github.com/pyther/nrfeed</generator>
    <author>{{ author }}</author>
    <itunes:author>{{ author }}</itunes:author>
    <itunes:category text="News &amp; Politics"/>
    <itunes:explicit>false</itunes:explicit>
    <googleplay:explicit>no</googleplay:explicit>
    <!-- optional tags -->
    <link>{{ link }}</link>
    {%- for item in items %}
    <item>
      {%- autoescape false %}
      <title>{{ item['title'] }}</title>
      <itunes:title>{{ item['title'] }}</itunes:title>
      {%- endautoescape %}
      <link>{{ item['story_url'] }}</link>
      <enclosure url="{{ item['audio_url'] }}" type="audio/mpeg" length="{{ item['audio_size'] }}"></enclosure>
      <itunes:duration>{{ item['duration'] }}</itunes:duration>
      <itunes:explicit>false</itunes:explicit>
      <googleplay:explicit>no</googleplay:explicit>
      <guid>{{ item['uid'] }}</guid>
      <pubDate>{{ item['pub_date'] }}</pubDate>
    </item>
    {%- endfor %}
  </channel>
</rss>
